{
  "mapping": {
    "numeric_detection": false,
    "properties": {
      "metaKey": {
        "type": "string",
        "doc_values": true,
        "store": false,
        "index": "not_analyzed"
      },
      "code": {
        "type": "string",
        "doc_values": true,
        "boost": "2.0",
        "index": "not_analyzed"
      },
      "docType": {
        "type": "string",
        "doc_values": true,
        "index": "not_analyzed"
      },
      "fortress": {
        "type": "string",
        "doc_values": true,
        "index": "not_analyzed"
      },
      "lastEvent": {
        "type": "string",
        "doc_values": true,
        "index": "not_analyzed"
      },
      "timestamp": {
        "type": "date"
      },
      "whenCreated": {
        "type": "date"
      },
      "whenUpdated": {
        "type": "date"
      },
      "description": {
        "type": "string",
        "boost": 4
      },
      "who": {
        "type": "string",
        "index": "not_analyzed"
      },
      "tags": {
        "type": "multi_field",
        "fields": {
          "tags": {
            "type": "completion",
            "preserve_position_increments": false,
            "analyzer": "auto-complete"
          },
          "facet": {
            "type": "string",

            "index": "not_analyzed",
            "docValues": true
          }
        }
      }
    },
    "dynamic_templates": [
      {
        "inline_tag": {
          "match": "tag.*",
          "mapping": {
            "type": "nested"
          }
        }
      },
      {
        "inline_tag_code_template": {
          "path_match": "tag.*.code",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "inline_tag_name_template": {
          "path_match": "tag.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "geo_points": {
          "path_match": "tag.*.geo.points.*",
          "match_mapping_type": "string",
          "mapping": {
            "type": "geo_point",
            "lat_lon": true,
            "geohash": true,
            "geohash_precision": "1km"
          }
        }
      },
      {
        "geo_code": {
          "path_match": "tag.*.geo.*.code",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "geo_name": {
          "path_match": "tag.*.geo.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "inline_entity_tag_code_template": {
          "path_match": "e.*.tag.*.code",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "inline_entity_tag_name_template": {
          "path_match": "e.*.tag.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "inline_entity_code_template": {
          "match_mapping_type": "string",
          "path_match": "e.*.code",
          "path_unmatch": "e.*.tag.*.code",
          "mapping": {
            "type": "string",
            "doc_values": true,
            "boost": "2.0",
            "index": "not_analyzed"
          }
        }
      },
      {
        "inline_entity_index_template": {
          "path_match": "e.*.index",
          "match_mapping_type": "string",
          "mapping": {
            "type": "string",
            "doc_values": true,
            "boost": "2.0",
            "index": "not_analyzed"
          }
        }
      },
      {
        "inline_entity_name_template": {
          "path_match": "e.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      }

    ]
  }
}